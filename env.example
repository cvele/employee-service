# JWT Secret for authentication (REQUIRED)
JWT_SECRET=your-secret-key-here-change-in-production

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=employee_service
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_SSLMODE=disable

# Database URL (constructed from above or set directly)
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=${POSTGRES_SSLMODE}

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_PORT=4222

# Application Configuration
HTTP_PORT=8000
GRPC_PORT=9000

# pgAdmin Configuration (for development)
PGADMIN_EMAIL=dev@example.com
PGADMIN_PASSWORD=dev
PGADMIN_PORT=5050

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=info

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317
